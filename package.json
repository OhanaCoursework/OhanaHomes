  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "unit-tests": "npm test src/__tests__/unitTests",
    "linter": "npx eslint .",
    "ui-tests": "cd src/__tests__/ui-tests/ && npm test *",
    "sitemap": "http-server src/assets/nuts-n-bolts_sitemap.xml",
    "pa11y-ci:sitemap": "wait-on http-get://localhost:4200 && wait-on http-get://localhost:8080 && pa11y-ci --sitemap http://localhost:8080",
    "a11y-check": "npm-run-all -p start sitemap pa11y-ci:sitemap",
    "prepare": "husky install",
    "pa11y-ci": "pa11y-ci --config .pa11yci.json"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "eslint": "^8.35.0",
    "eslint-plugin-react": "^7.32.2",
    "husky": "^8.0.3",
    "npm-run-all": "^4.1.5",
    "react-icons": "^4.8.0",
